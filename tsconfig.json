{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/page.jsx",
    "app/layout.jsx",
    "taskContext/TaskContext.jsx",
    "app/components/TodoList.jsx",
    "app/components/Task.jsx",
    "app/components/Modal.jsx",
    "app/components/AddTask.jsx"
  ],
  "exclude": ["node_modules"]
}
